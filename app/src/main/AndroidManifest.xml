<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="leon.android.pulltorefresh.sample">

    <uses-sdk tools:overrideLibrary="cherry.android.recycler" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HeaderFooterActivity" />
        <activity android:name=".ListViewActivity" />
        <activity android:name=".LoadMoreActivity" />
        <activity android:name=".RecyclerPullToRefreshActivity" />
        <activity android:name=".OverlayCardActivity" />
        <activity android:name=".PullToRefreshActivity"></activity>
    </application>

</manifest>